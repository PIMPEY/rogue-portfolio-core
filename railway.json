{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd app-web && npm install && npx prisma generate && npm run build",
    "watchPatterns": ["app-web/**"]
  },
  "deploy": {
    "startCommand": "cd app-web && node_modules/.bin/next start -p $PORT",
    "healthcheckPath": "/api/health"
  }
}
