{
  "$schema": "https://railway.app/railway.schema.json",
  "services": {
    "frontend": {
      "root": "app-web",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "bash .railway/build.sh",
        "watchPatterns": ["**"]
      },
      "deploy": {
        "startCommand": "npm run start",
        "healthcheckPath": "/api/health"
      }
    },
    "backend": {
      "root": "backend",
      "build": {
        "builder": "NIXPACKS",
        "buildCommand": "bash .railway/build.sh",
        "watchPatterns": ["**"]
      },
      "deploy": {
        "startCommand": "npm run start",
        "healthcheckPath": "/health"
      }
    }
  }
}
