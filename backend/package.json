{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "prisma migrate deploy --schema=prisma/schema.prisma || echo 'Migration failed, continuing...' && node dist/index.js",
    "migrate:deploy": "prisma migrate deploy --schema=prisma/schema.prisma",
    "migrate:dev": "prisma migrate dev --schema=prisma/schema.prisma",
    "generate": "prisma generate --schema=prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts",
    "postinstall": "prisma generate --schema=prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20",
    "prisma": "^6.19.1",
    "tsx": "^4.7.0",
    "typescript": "^5"
  }
}
