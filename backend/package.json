{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "echo \"Running database migrations...\" && (prisma db push --accept-data-loss --skip-generate || prisma migrate deploy || echo \"Migration failed, starting server anyway...\") && echo \"Starting server...\" && node dist/index.js",
    "start:dev": "node dist/index.js",
    "migrate:deploy": "prisma db push --skip-generate || prisma migrate deploy",
    "migrate:dev": "prisma migrate dev",
    "migrate:resolve": "prisma migrate resolve --rolled-back",
    "generate": "prisma generate",
    "seed": "tsx prisma/seed.ts",
    "seed:prod": "tsx prisma/seed-production.ts",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.670.0",
    "@aws-sdk/s3-request-presigner": "^3.670.0",
    "@prisma/client": "^6.19.1",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "multer": "^2.0.2",
    "openai": "^6.15.0",
    "pdf-parse": "^2.4.5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.13",
    "@types/node": "^22.10.5",
    "prisma": "^6.19.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
